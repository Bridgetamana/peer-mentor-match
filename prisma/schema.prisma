generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Role {
  learner
  tutor
}

model UserProfile {
  id        Int      @id @default(autoincrement())
  userId    String   @unique
  role      Role
  completed Boolean  @default(true)
  data      Json?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}